<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:gravity="center"
    tools:context=".RegisterActivity">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="318dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="50sp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="11sp"
                    android:layout_marginStart="11sp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/textHomeDeocr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6sp"
                    android:layout_marginStart="6sp"
                    android:layout_marginTop="12sp"
                    android:text="HomeDecor"
                    android:textColor="@color/Name"
                    android:textSize="36sp"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0sp">

                <LinearLayout
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="18sp"
                    android:layout_marginStart="24sp"
                    android:layout_marginLeft="24sp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/OffWhite">

                        <EditText
                            android:id="@+id/textfirstname"
                            android:layout_width="158dp"
                            android:layout_height="wrap_content"
                            android:hint="First Name"
                            android:inputType="text"
                            android:textColor="@color/White"
                            android:textColorHint="@color/OffWhite" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/OffWhite">

                        <EditText
                            android:id="@+id/textlastname"
                            android:layout_width="158dp"
                            android:layout_height="wrap_content"
                            android:hint="Last Name"
                            android:inputType="text"
                            android:textColor="@color/White"
                            android:layout_marginStart="4sp"
                            android:textColorHint="@color/OffWhite"
                            android:layout_marginLeft="6sp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/OffWhite">

                    <EditText
                        android:id="@+id/textemail"
                        android:layout_width="324dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24sp"
                        android:layout_marginStart="24sp"
                        android:layout_marginTop="14sp"
                        android:hint="Email"
                        android:maxLength="29"
                        android:textColor="@color/White"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@color/OffWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/OffWhite">

                    <EditText
                        android:id="@+id/textcontactno"
                        android:layout_width="324dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24sp"
                        android:layout_marginStart="24sp"
                        android:layout_marginTop="14sp"
                        android:hint="Contact No."
                        android:maxLength="10"
                        android:textColor="@color/White"
                        android:inputType="number"
                        android:textColorHint="@color/OffWhite" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/Name"
                    android:textColorHint="@color/OffWhite">
                    <EditText
                        android:id="@+id/textpassword"
                        android:layout_width="324dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24sp"
                        android:layout_marginStart="24sp"
                        android:layout_marginTop="14sp"
                        android:hint="Password"
                        android:textColor="@color/White"
                        android:inputType="textPassword"
                        android:textColorHint="@color/OffWhite" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/Name"
                    android:textColorHint="@color/OffWhite">
                    <EditText
                        android:id="@+id/textconfirmpassword"
                        android:layout_width="324dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24sp"
                        android:layout_marginStart="24sp"
                        android:layout_marginTop="14sp"
                        android:hint="Confirm Password"
                        android:textColor="@color/White"
                        android:inputType="textPassword"
                        android:textColorHint="@color/OffWhite" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="31sp"
                android:layout_marginStart="31sp"
                android:layout_marginTop="26sp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="78sp"
                    android:layout_marginStart="78sp"
                    android:background="@drawable/button"
                    android:text="REGISTER"
                    android:textColor="@color/White"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9sp"
                    android:layout_marginStart="9sp"
                    android:layout_marginTop="9sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nosignin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already Have An Account?"
                        android:textColor="@color/OffWhite"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/signin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4sp"
                        android:layout_marginStart="4sp"
                        android:text="SignIn"
                        android:textColor="@color/OffWhite"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>